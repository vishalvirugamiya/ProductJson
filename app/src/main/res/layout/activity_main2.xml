<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">




        <ScrollView
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_340sdp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom=



                            "@dimen/_10sdp" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">



                <LinearLayout
                    android:background="@drawable/shape2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/product"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:text="product"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25sdp" />

                    <TextView
                        android:id="@+id/category"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="category"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RatingBar
                            android:id="@+id/RatingBar"
                            android:layout_marginLeft="@dimen/_5sdp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressBackgroundTint="#D0000000"
                            android:progressTint="@color/black"
                            android:stepSize="0.9" />

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="rate"
                            android:textColor="#92000000"
                            android:textSize="@dimen/_12sdp" />




                    </LinearLayout>

                    <LinearLayout
                        android:width="0.5dp"
                        android:background="@drawable/shape2"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <TextView
                            android:id="@+id/price"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_22sdp" />


                        <TextView
                            android:id="@+id/dicountr"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="discount"
                            android:textColor="#108E15"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/brand"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="brand"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/stok"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="stok"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/shape1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/warranty"
                        android:fontFamily="@font/font2"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="warranty"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/returnPolicy"
                        android:fontFamily="@font/font2"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="returnPolicy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />


                    <TextView
                        android:id="@+id/shiping"
                        android:fontFamily="@font/font2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="shippingInformation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />


                    <TextView
                        android:id="@+id/availability"
                        android:fontFamily="@font/font2"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:text="availability"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />


                    <LinearLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/width"
                            android:fontFamily="@font/font2"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="width"
                            android:textColor="#BC000000"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/height"
                            android:fontFamily="@font/font2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2ssp"
                            android:text="height"
                            android:textColor="#BC000000"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/depth"
                            android:fontFamily="@font/font2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2ssp"
                            android:text="depth"
                            android:textColor="#BC000000"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/shape1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/font3"
                        android:text="description  "
                        android:textColor="#E4000000"
                        android:textSize="@dimen/_25sdp" />
                    <TextView
                        android:id="@+id/description"
                        android:fontFamily="@font/font3"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="description"
                        android:textColor="#E6000000"
                        android:textSize="@dimen/_12sdp" />



                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Reviews"
                        android:fontFamily="@font/font1"
                        android:layout_margin="@dimen/_10sdp"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyView3"
                        android:layout_margin="@dimen/_10sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:background="@drawable/shape1"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Meta"
                        android:fontFamily="@font/font1"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/created"
                        android:text="createdAt"
                        android:textColor="#D3000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/updatedAt"
                        android:text="updatedAt"
                        android:textColor="#D3000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/barcode"
                        android:text="barcode"
                        android:textColor="#D3000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/qrCode"
                        android:text="qrCode"
                        android:textColor="#D3000000"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </ScrollView>

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:text="pay with emi"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:strokeWidth="@dimen/_1sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_50sdp" />

        <com.google.android.material.button.MaterialButton
            android:text="Buy now"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            app:strokeWidth="@dimen/_1sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_50sdp" />

    </LinearLayout>

</FrameLayout>